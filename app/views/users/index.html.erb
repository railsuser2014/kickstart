<h1>Listing users</h1>

<table class="table-border table-hover">
  <thead>
    <tr>
      <th class="col-md-2">Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user, class: "btn btn-info btn-sm" %></td>
        <td><%= link_to 'Edit', edit_user_path(user),  class: "btn btn-success btn-sm" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
